<%= form_for @recipe do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label "choose ingredients"%><br>
  <% @ingredients.each do |ingredient| %>
    <%= f.check_box :ingredients, { multiple: true }, ingredient, false %>
    <%= ingredient.description %>
  <% end %><br>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %><br>
  <%= f.label :source_url %>
  <%= f.text_field :source_url %><br>
<%= f.submit %>
<% end %>
