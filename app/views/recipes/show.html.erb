<h2><%= @recipe.title %></h2>
<h4>Ingredients: <% @recipe.ingredients.each do |ingredient| %></h4>
<br>
<%= ingredient.description %><br>
<% end %><br>
<%= @recipe.likes.count %>
<%= button_to 'Like', recipe_likes_path(@recipe), method: :post %><br>

<%= button_to "Edit Recipe", edit_recipe_path(@recipe)%>
<%= button_to "Delete", @recipe, method: :delete%>
