<%= form_for @recipe do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :user_id %>
<%= f.text_field :user_id %><br>
<%= f.label "choose ingredients"%><br>
  <% @ingredients.each do |ingredient| %>
    <%= f.check_box :ingredients, { multiple: true }, ingredient, false %>
    <%= ingredient.description %>
  <% end %><br>
<%= f.submit %>
<% end %>
