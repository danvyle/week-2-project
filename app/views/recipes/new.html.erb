<%= stylesheet_link_tag "createrecipe.css" %>
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Create Create Recipe</title>
  </head>
  <body class ="newrecipe">
    <div class="header">
      <div class="header-container">
        <div class="menu-wrapper">
          <a class="menu-button" href="/recipes">
            <i class="fa fa-sign-in fa-2x visible-xs"></i>
            <span class="hidden-xs">Home</span>
          </a>
          <a class="menu-button" href="/users/<%= current_user.id %>">
            <i class="fa fa-sign-in fa-2x visible-xs"></i>
            <span class="hidden-xs">Profile</span>
          </a>
          <a class="menu-button" <%= link_to "Log out", login_path, method: :delete %>
          </a>
        </div>
      </div>
    </div>


<h1>Create Your Recipe</h1>


  <%= form_for @recipe do |f| %>

    <h4><%= f.label :"Create Your Recipe Name" %></h4>
    <%= f.text_field :title %><br>



    <h4><%= f.label "choose ingredients"%><br></h4>

    <div class="checkboxes">


    <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :description) do |b| %>
      <%= b.label(class: "label-checkbox") { b.check_box + b.text } %>
    <% end %>

    </div>

    <h4><%= f.label :"Link to an image of your recipe:" %></h4>
    <%= f.text_field :image_url %>

    <h4><%= f.label :"Link your recipe blog:" %></h4>
    <%= f.text_field :source_url %><br>

    <%= f.submit %>
  <% end %>




</body>
</html>
